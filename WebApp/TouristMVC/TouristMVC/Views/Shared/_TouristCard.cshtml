@model Tourist

@{
    ViewData["Title"] = "_TouristCard";
}
<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="thumbnail">
        <div>
        <img style="width:150px; height: 150px" src="@Model.UrlImage" alt="">
        </div>
        <div class="caption">
            <h5 class="pull-right">@Model.Country.Name</h5>
            <h5>
                <a asp-controller="Tourist" asp-action="Details" asp-route-Id="@Model.Id">@Model.Name</a>
            </h5>
        </div>
    </div>
</div>

