@model CountryViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tourist.Id" />
            <div class="form-group">
                <label asp-for="Tourist.Name" class="control-label"></label>
                <input asp-for="Tourist.Name" class="form-control" />
                <span asp-validation-for="Tourist.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.Sex" class="control-label">
                    Giới Tính:
                    @*@Html.DisplayNameFor(model => model.Tourist.Sex)*@
                    @*<input class="form-check-input" asp-for="Tourist.Sex" />*@
                    Nam   @Html.RadioButton("Tourist.Sex", true)
                    Nữ:    @Html.RadioButton("Tourist.Sex", false)

                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.UrlImage" class="control-label"></label>
                <input asp-for="Tourist.UrlImage" class="form-control" />
                <span asp-validation-for="Tourist.UrlImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.DateOfBirth" class="control-label"></label>
                <input asp-for="Tourist.DateOfBirth" class="form-control" />
                <span asp-validation-for="Tourist.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.Tel" class="control-label"></label>
                <input asp-for="Tourist.Tel" class="form-control" />
                <span asp-validation-for="Tourist.Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.Email" class="control-label"></label>
                <input asp-for="Tourist.Email" class="form-control" />
                <span asp-validation-for="Tourist.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tourist.Country.Name" class="control-label"></label>
                <select asp-for="Tourist.CountryId" class="form-control" asp-items="Model.CountryList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

